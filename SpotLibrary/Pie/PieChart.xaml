<UserControl x:Class="SpotLibrary.Pie.PieChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpotLibrary.Pie"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="MainCanvas" ClipToBounds="True" Grid.Column="0">
            <local:PieSector Center="{Binding Path=PreviousMousePositionPixels}" 
                             Stroke="White"
                             StrokeDashArray="2 2"
                             SnapsToDevicePixels="True"
                             Fill="Beige"
                             StartAngle="0"
                             EndAngle="{Binding Path=DeltaAngle}"
                             SmallAngle="True"
                             Radius="40"/>
        </Canvas>
    </Grid>
</UserControl>
